<Window
    x:Class="MyMemories.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="My Memories - File Viewer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content Area with TreeView and Viewer -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="150" MaxWidth="600"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: TreeView with Search and Add Buttons -->
            <Grid Grid.Column="0" BorderBrush="LightGray" BorderThickness="0,0,1,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Box Panel -->
                <Grid Grid.Row="0" Margin="8,8,8,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ComboBox 
                        Grid.Column="0"
                        x:Name="SearchComboBox"
                        IsEditable="True"
                        HorizontalAlignment="Stretch"
                        KeyDown="SearchComboBox_KeyDown"
                        Margin="0,0,4,0"/>
                    
                    <Button 
                        Grid.Column="1"
                        x:Name="SearchButton"
                        Click="SearchButton_Click"
                        Width="32"
                        Height="32"
                        Padding="0"
                        ToolTip="Search"
                        Content="🔍"/>
                </Grid>

                <!-- Icon Button Panel -->
                <Grid Grid.Row="1" Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button 
                        Grid.Column="0"
                        Click="CreateCategoryButton_Click"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,4,0"
                        ToolTip="Create Category">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📁" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="Category" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button 
                        Grid.Column="1"
                        Click="AddBookmarkButton_Click"
                        HorizontalAlignment="Stretch"
                        Margin="4,0,0,0"
                        ToolTip="Add Link">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔗" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBlock Text="Link" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- TreeView -->
                <TreeView 
                    Grid.Row="2"
                    x:Name="LinksTreeView"
                    Margin="8,0,8,8"
                    SelectionChanged="LinksTreeView_SelectionChanged"
                    MouseRightButtonUp="LinksTreeView_RightTapped"
                    MouseDoubleClick="LinksTreeView_DoubleTapped">
                    
                    <!-- Context Menu for Category Nodes -->
                    <TreeView.Resources>
                        <ContextMenu x:Key="CategoryContextMenu">
                            <MenuItem Header="Add Link" Click="CategoryMenu_AddLink_Click"/>
                            <MenuItem Header="Add Sub Category" Click="CategoryMenu_AddSubCategory_Click"/>
                            <Separator/>
                            <MenuItem Header="Edit Category" Click="CategoryMenu_Edit_Click"/>
                            <Separator/>
                            <MenuItem Header="Remove Category" Click="CategoryMenu_Remove_Click"/>
                        </ContextMenu>
                        
                        <!-- Context Menu for Link Nodes -->
                        <ContextMenu x:Key="LinkContextMenu">
                            <MenuItem Header="Add Sub Category" Click="LinkMenu_AddSubCategory_Click"/>
                            <Separator/>
                            <MenuItem Header="Move Link" Click="LinkMenu_Move_Click"/>
                            <MenuItem Header="Edit Link" Click="LinkMenu_Edit_Click"/>
                            <Separator/>
                            <MenuItem Header="Remove Link" Click="LinkMenu_Remove_Click"/>
                        </ContextMenu>
                    </TreeView.Resources>
                </TreeView>
            </Grid>

            <!-- GridSplitter for resizing -->
            <GridSplitter 
                Grid.Column="1"
                x:Name="TreeViewSplitter"
                Width="6"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="Transparent"
                ResizeDirection="Columns"
                ResizeBehavior="PreviousAndNext"
                Cursor="SizeWE"/>

            <!-- Content Viewer Area -->
            <Grid Grid.Column="2" x:Name="ContentGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Panel for File/Category Info -->
                <ScrollViewer 
                    Grid.Row="0"
                    x:Name="HeaderViewerScroll"
                    Visibility="Collapsed"
                    Padding="20,16,20,8"
                    Background="WhiteSmoke">
                    <StackPanel x:Name="HeaderPanel"/>
                </ScrollViewer>

                <!-- Image Viewer -->
                <Image 
                    Grid.Row="1"
                    x:Name="ImageViewer"
                    Visibility="Collapsed"
                    Stretch="Uniform"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>

                <!-- WebView2 for HTML and PDF -->
                <WebBrowser 
                    Grid.Row="1"
                    x:Name="WebViewer"
                    Visibility="Collapsed"/>

                <!-- Text Viewer -->
                <ScrollViewer
                    Grid.Row="1"
                    x:Name="TextViewerScroll"
                    Visibility="Collapsed">
                    <TextBox 
                        x:Name="TextViewer"
                        IsReadOnly="True"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Consolas"
                        Padding="12"/>
                </ScrollViewer>

                <!-- Node Details Viewer -->
                <ScrollViewer
                    Grid.Row="1"
                    x:Name="DetailsViewerScroll"
                    Visibility="Collapsed"
                    Padding="20">
                    <StackPanel x:Name="DetailsPanel"/>
                </ScrollViewer>

                <!-- Welcome Panel -->
                <StackPanel 
                    Grid.Row="1"
                    x:Name="WelcomePanel"
                    Visibility="Visible"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <TextBlock 
                        Text="Welcome to My Memories"
                        FontSize="24"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,16"/>
                    <TextBlock 
                        Text="Click 'Open File' to view images, HTML, PDF, or text files"
                        FontSize="14"
                        HorizontalAlignment="Center"
                        Foreground="Gray"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="1" Padding="8,4" Background="WhiteSmoke">
            <TextBlock 
                x:Name="StatusText"
                Text="Ready"
                FontSize="12"
                Foreground="Gray"/>
        </Grid>
    </Grid>
</Window>
