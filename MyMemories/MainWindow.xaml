<Window
    x:Class="MyMemories.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="My Memories - File Viewer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with File Selection -->
        <Grid Grid.Row="0" Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock 
                Grid.Column="0"
                x:Name="CurrentFileText"
                Text="No file selected"
                VerticalAlignment="Center"
                FontSize="14"
                TextTrimming="CharacterEllipsis"/>
            
            <Button 
                Grid.Column="1"
                Content="Open File"
                Click="OpenFileButton_Click"
                Margin="8,0,0,0"/>
        </Grid>

        <!-- Content Viewer Area -->
        <ScrollViewer Grid.Row="1" x:Name="ContentScrollViewer">
            <Grid x:Name="ContentGrid">
                <!-- Image Viewer -->
                <Image 
                    x:Name="ImageViewer"
                    Visibility="Collapsed"
                    Stretch="Uniform"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>

                <!-- WebView2 for HTML and PDF -->
                <WebView2 
                    x:Name="WebViewer"
                    Visibility="Collapsed"/>

                <!-- Text Viewer -->
                <TextBlock 
                    x:Name="TextViewer"
                    Visibility="Collapsed"
                    TextWrapping="Wrap"
                    FontFamily="Consolas"
                    Padding="16"
                    IsTextSelectionEnabled="True"/>

                <!-- Welcome Message -->
                <StackPanel 
                    x:Name="WelcomePanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="16">
                    <TextBlock 
                        Text="My Memories - File Viewer"
                        FontSize="24"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"/>
                    <TextBlock 
                        Text="Open a file to view its contents"
                        FontSize="16"
                        HorizontalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <TextBlock 
                        Text="Supported formats: Images (JPG, PNG, GIF, BMP), HTML, PDF, Text files"
                        FontSize="12"
                        HorizontalAlignment="Center"
                        TextWrapping="Wrap"
                        TextAlignment="Center"
                        Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                        MaxWidth="400"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar -->
        <Grid Grid.Row="2" Padding="8,4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <TextBlock 
                x:Name="StatusText"
                Text="Ready"
                FontSize="12"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </Grid>
    </Grid>
</Window>
