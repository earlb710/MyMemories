<Window
    x:Class="MyMemories.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="My Memories - File Viewer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with File Selection -->
        <Grid Grid.Row="0" Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock 
                Grid.Column="0"
                x:Name="CurrentFileText"
                Text="No file selected"
                VerticalAlignment="Center"
                FontSize="14"
                TextTrimming="CharacterEllipsis"/>
            
            <Button 
                Grid.Column="1"
                Content="Open File"
                Click="OpenFileButton_Click"
                Margin="8,0,0,0"/>
        </Grid>

        <!-- Content Viewer Area -->
        <ScrollViewer Grid.Row="1" x:Name="ContentScrollViewer">
            <Grid x:Name="ContentGrid">
                <!-- Image Viewer -->
                <Image 
                    x:Name="ImageViewer"
                    Visibility="Collapsed"
                    Stretch="Uniform"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>

                <!-- WebView2 for HTML and PDF -->
                <WebView2 
                    x:Name="WebViewer"
                    Visibility="Collapsed"/>

                <!-- TreeView Header -->
                <Grid Grid.Row="0" Padding="12,8" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock 
                        Grid.Column="0"
                        Text="My Memories"
                        FontSize="14"
                        FontWeight="SemiBold"
                        VerticalAlignment="Center"/>
                    
                    <Button 
                        Grid.Column="1"
                        Content="+"
                        ToolTipService.ToolTip="Add Bookmark"
                        Click="AddBookmarkButton_Click"
                        Width="32"
                        Height="32"/>
                </Grid>

                <!-- TreeView for Bookmarks -->
                <TreeView 
                    Grid.Row="1"
                    x:Name="BookmarksTreeView"
                    SelectionMode="Single"
                    Padding="8">
                </TreeView>
            </Grid>
        </ScrollViewer>

        <!-- Status Bar -->
        <Grid Grid.Row="2" Padding="8,4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <TextBlock 
                x:Name="StatusText"
                Text="Ready"
                FontSize="12"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </Grid>
    </Grid>
</Window>
