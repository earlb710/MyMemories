<Window
    x:Class="MyMemories.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:MyMemories"
    xmlns:controls="using:MyMemories.Controls"
    mc:Ignorable="d"
    Title="My Memories - File Viewer">

    <Grid KeyDown="Window_KeyDown" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <MenuBar Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <MenuBarItem Title="File">
                <MenuFlyoutItem Text="Import Browser Bookmarks..." Click="MenuFile_ImportBookmarks_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE8A7;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Import Category Operations..." Click="MenuFile_ImportCategoryOperations_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE8B5;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Export Bookmarks to Browser..." Click="MenuFile_ExportBookmarks_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xEDE1;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Exit" Click="MenuFile_Exit_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE7E8;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuBarItem>
            <MenuBarItem Title="Config">
                <MenuFlyoutItem Text="Directory Setup" Click="MenuConfig_DirectorySetup_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE8B7;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Security Setup" Click="MenuConfig_SecuritySetup_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE72E;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Tag Management" Click="MenuConfig_TagManagement_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE8EC;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutItem Text="Rating Management" Click="MenuConfig_RatingManagement_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE735;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
                <MenuFlyoutSeparator/>
                <MenuFlyoutItem Text="Options" Click="MenuConfig_Options_Click">
                    <MenuFlyoutItem.Icon>
                        <FontIcon Glyph="&#xE713;"/>
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>
            </MenuBarItem>
        </MenuBar>

        <!-- Main Content Area with TreeView and Viewer -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" MinWidth="150" MaxWidth="600" x:Name="TreeViewColumn"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: TreeView with Search and Add Buttons -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Box Panel -->
                <Grid Grid.Row="0" Margin="8,8,8,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ComboBox 
                        Grid.Column="0"
                        x:Name="SearchComboBox"
                        IsEditable="True"
                        PlaceholderText="Search categories and links..."
                        HorizontalAlignment="Stretch"
                        TextSubmitted="SearchComboBox_TextSubmitted"
                        KeyDown="SearchComboBox_KeyDown"
                        Margin="0,0,4,0"/>
                    
                    <Button 
                        Grid.Column="1"
                        x:Name="SearchButton"
                        Click="SearchButton_Click"
                        Width="32"
                        Height="32"
                        Padding="0">
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Search"/>
                        </ToolTipService.ToolTip>
                        <FontIcon Glyph="&#xE721;" FontSize="16"/>
                    </Button>
                    
                    <Button 
                        Grid.Column="2"
                        x:Name="TagFilterButton"
                        Width="32"
                        Height="32"
                        Padding="0"
                        Margin="4,0,0,0">
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Filter by Tag"/>
                        </ToolTipService.ToolTip>
                        <Grid>
                            <FontIcon x:Name="TagFilterIcon" Glyph="&#xE8EC;" FontSize="16"/>
                            <!-- Active filter indicator dot -->
                            <Ellipse 
                                x:Name="TagFilterActiveIndicator"
                                Width="8" 
                                Height="8"
                                Fill="#FF0078D4"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,-2,-2,0"
                                Visibility="Collapsed"/>
                        </Grid>
                        <Button.Flyout>
                            <MenuFlyout x:Name="TagFilterFlyout" Placement="BottomEdgeAlignedRight" Opening="TagFilterFlyout_Opening">
                                <!-- Items will be populated dynamically -->
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>
                </Grid>

                <!-- Icon Button Panel -->
                <Grid Grid.Row="1" Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button 
                        Grid.Column="0"
                        Click="CreateCategoryButton_Click"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,4,0">
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Create Category"/>
                        </ToolTipService.ToolTip>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8F4;" FontSize="16"/>
                            <TextBlock Text="Category" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button 
                        Grid.Column="1"
                        Click="AddBookmarkButton_Click"
                        HorizontalAlignment="Stretch"
                        Margin="4,0,0,0">
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Add Link"/>
                        </ToolTipService.ToolTip>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE71B;" FontSize="16"/>
                            <TextBlock Text="Link" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- TreeView -->
                <TreeView 
                    Grid.Row="2"
                    x:Name="LinksTreeView"
                    Margin="8,0,8,8"
                    CanReorderItems="True"
                    CanDragItems="True"
                    AllowDrop="True"
                    SelectionChanged="LinksTreeView_SelectionChanged"
                    RightTapped="LinksTreeView_RightTapped"
                    DoubleTapped="LinksTreeView_DoubleTapped"
                    KeyDown="LinksTreeView_KeyDown"
                    DragItemsStarting="LinksTreeView_DragItemsStarting"
                    DragItemsCompleted="LinksTreeView_DragItemsCompleted">
                    
                    <!-- Item Template Selector -->
                    <TreeView.ItemTemplateSelector>
                        <local:TreeNodeTemplateSelector x:Name="NodeTemplateSelector">
                            <!-- Category Template -->
                            <local:TreeNodeTemplateSelector.CategoryTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <!-- Tooltip for category -->
                                        <ToolTipService.ToolTip>
                                            <ToolTip>
                                                <StackPanel Spacing="4" MaxWidth="400">
                                                    <TextBlock 
                                                        Text="{Binding Content.Name, Mode=OneWay}" 
                                                        FontWeight="SemiBold"
                                                        TextWrapping="Wrap"/>
                                                    <TextBlock 
                                                        Text="{Binding Content.Description, Mode=OneWay}" 
                                                        TextWrapping="Wrap"
                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                        <TextBlock.Visibility>
                                                            <Binding Path="Content.Description" Mode="OneWay">
                                                                <Binding.Converter>
                                                                    <local:StringToVisibilityConverter/>
                                                                </Binding.Converter>
                                                            </Binding>
                                                        </TextBlock.Visibility>
                                                    </TextBlock>
                                                    <!-- Tag list with names -->
                                                    <TextBlock 
                                                        Text="{Binding Content.TagDisplayText, Mode=OneWay}" 
                                                        TextWrapping="Wrap"
                                                        Visibility="{Binding Content.HasTags, Mode=OneWay}"
                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                        
                                        <!-- Icon Container with Password Badge -->
                                        <Grid Width="20" Height="20">
                                            <!-- Primary Icon -->
                                            <TextBlock 
                                                Text="{Binding Content.Icon}" 
                                                FontSize="16"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                            
                                            <!-- Password Protected Badge (top-right position) -->
                                            <Border
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Background="Black"
                                                CornerRadius="2"
                                                Padding="1"
                                                Margin="0,0,-1,0">
                                                <Border.Visibility>
                                                    <Binding Path="Content.PasswordProtection">
                                                        <Binding.Converter>
                                                            <local:PasswordProtectionToVisibilityConverter/>
                                                        </Binding.Converter>
                                                    </Binding>
                                                </Border.Visibility>
                                                <FontIcon 
                                                    Glyph="&#xE72E;"
                                                    FontSize="7"
                                                    FontWeight="Black"
                                                    Foreground="#FFFFD700"/>
                                                <ToolTipService.ToolTip>
                                                    <ToolTip Content="Password protected"/>
                                                </ToolTipService.ToolTip>
                                            </Border>
                                        </Grid>
                                        
                                        <!-- Rating star indicator (BEFORE name) -->
                                        <FontIcon 
                                            Glyph="&#xE735;"
                                            FontSize="12"
                                            Foreground="#FFFFC107"
                                            VerticalAlignment="Center"
                                            Visibility="{Binding Content.HasRatings, Mode=OneWay}">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Content.RatingDisplayText, Mode=OneWay}"/>
                                            </ToolTipService.ToolTip>
                                        </FontIcon>
                                        
                                        <TextBlock Text="{Binding Content.Name}" VerticalAlignment="Center"/>
                                        
                                        <!-- Tag indicator badges with colored backgrounds -->
                                        <ContentPresenter
                                            VerticalAlignment="Center"
                                            Visibility="{Binding Content.HasTags, Mode=OneWay}">
                                            <ContentPresenter.Content>
                                                <Binding Path="Content.TagIds" Mode="OneWay">
                                                    <Binding.Converter>
                                                        <local:TagIdsToIconsPanelConverter/>
                                                    </Binding.Converter>
                                                </Binding>
                                            </ContentPresenter.Content>
                                        </ContentPresenter>
                                    </StackPanel>
                                </DataTemplate>
                            </local:TreeNodeTemplateSelector.CategoryTemplate>
                            
                            <!-- Link Template with Badges -->
                            <local:TreeNodeTemplateSelector.LinkTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <!-- Tooltip for entire link item showing title, description, tags, and URL status -->
                                        <ToolTipService.ToolTip>
                                            <ToolTip>
                                                <StackPanel Spacing="4" MaxWidth="400">
                                                    <!-- Title -->
                                                    <TextBlock 
                                                        Text="{Binding Content.Title, Mode=OneWay}" 
                                                        FontWeight="SemiBold"
                                                        TextWrapping="Wrap"/>
                                                    <!-- Description (if available) -->
                                                    <TextBlock 
                                                        Text="{Binding Content.Description, Mode=OneWay}" 
                                                        TextWrapping="Wrap"
                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                        <TextBlock.Visibility>
                                                            <Binding Path="Content.Description" Mode="OneWay">
                                                                <Binding.Converter>
                                                                    <local:StringToVisibilityConverter/>
                                                                </Binding.Converter>
                                                            </Binding>
                                                        </TextBlock.Visibility>
                                                    </TextBlock>
                                                    <!-- Tag list with names -->
                                                    <TextBlock 
                                                        Text="{Binding Content.TagDisplayText, Mode=OneWay}" 
                                                        TextWrapping="Wrap"
                                                        Visibility="{Binding Content.HasTags, Mode=OneWay}"
                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                    <!-- URL Status (if checked) -->
                                                    <StackPanel Visibility="{Binding Content.ShowUrlStatusBadge, Mode=OneWay}" Margin="0,4,0,0">
                                                        <TextBlock 
                                                            Text="{Binding Content.UrlStatusDisplayText, Mode=OneWay}" 
                                                            FontWeight="SemiBold"
                                                            TextWrapping="Wrap"/>
                                                        <TextBlock 
                                                            Text="{Binding Content.UrlStatusMessage, Mode=OneWay}" 
                                                            TextWrapping="Wrap"
                                                            Visibility="{Binding Content.HasUrlStatusMessage, Mode=OneWay}"/>
                                                        <TextBlock 
                                                            Text="{Binding Content.UrlLastCheckedText, Mode=OneWay}" 
                                                            FontStyle="Italic"
                                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                            Visibility="{Binding Content.HasUrlLastChecked, Mode=OneWay}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </ToolTip>
                                        </ToolTipService.ToolTip>
                                        
                                        <!-- Icon Container with Overlay Badges -->
                                        <Grid Width="20" Height="20">
                                            <!-- Primary Icon -->
                                            <TextBlock 
                                                Text="{Binding Content.IconWithoutBadge}" 
                                                FontSize="16"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>

                                            <!-- Link Badge Icon for LinkOnly folders (bottom-right corner) -->
                                            <FontIcon 
                                                Glyph="&#xE71B;"
                                                FontSize="8"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Foreground="#FF0066CC"
                                                Margin="0,0,-1,-1"
                                                Visibility="{Binding Content.ShowLinkBadge, Mode=OneWay}">
                                                <ToolTipService.ToolTip>
                                                    <ToolTip Content="Linked folder"/>
                                                </ToolTipService.ToolTip>
                                            </FontIcon>

                                            <!-- Zip Badge Text for Zip Archives (bottom-right corner) -->
                                            <Border
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Background="#FF2196F3"
                                                CornerRadius="2"
                                                Padding="2,0"
                                                Margin="0,0,0,0"
                                                Visibility="{Binding Content.ShowZipBadge, Mode=OneWay}">
                                                <TextBlock
                                                    Text="Zip"
                                                    FontSize="6"
                                                    FontWeight="Bold"
                                                    Foreground="White"
                                                    VerticalAlignment="Center"/>
                                                <ToolTipService.ToolTip>
                                                    <ToolTip Content="Zip archive"/>
                                                </ToolTipService.ToolTip>
                                            </Border>

                                            <!-- Password Protected Badge for Zip Files (top-right corner) -->
                                            <Border
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Background="Black"
                                                CornerRadius="2"
                                                Padding="1"
                                                Margin="0,0,-1,0">
                                                <Border.Visibility>
                                                    <Binding Path="Content.IsZipPasswordProtected" Mode="OneWay">
                                                        <Binding.Converter>
                                                            <local:BoolToVisibilityConverter/>
                                                        </Binding.Converter>
                                                    </Binding>
                                                </Border.Visibility>
                                                <FontIcon 
                                                    Glyph="&#xE72E;"
                                                    FontSize="7"
                                                    FontWeight="Black"
                                                    Foreground="#FFFFD700"/>
                                                <ToolTipService.ToolTip>
                                                    <ToolTip Content="Password protected zip"/>
                                                </ToolTipService.ToolTip>
                                            </Border>

                                            <!-- Warning Badge Icon for Changed Folders (top-right corner) -->
                                            <Border
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Background="White"
                                                CornerRadius="2"
                                                Padding="1"
                                                Margin="0,-1,-1,0"
                                                Visibility="{Binding Content.HasChanged, Mode=OneWay}">
                                                <FontIcon 
                                                    Glyph="&#xE7BA;"
                                                    FontSize="8"
                                                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                                                <ToolTipService.ToolTip>
                                                    <ToolTip Content="Folder has changed since last catalog"/>
                                                </ToolTipService.ToolTip>
                                            </Border>

                                            <!-- URL Status Badge (right side, vertically centered) -->
                                            <Ellipse 
                                                Width="8" 
                                                Height="8"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                                Margin="0,0,-2,0"
                                                Visibility="{Binding Content.ShowUrlStatusBadge, Mode=OneWay}"
                                                PointerEntered="UrlStatusBadge_PointerEntered"
                                                PointerExited="UrlStatusBadge_PointerExited">
                                                <Ellipse.Fill>
                                                    <SolidColorBrush Color="{Binding Content.UrlStatusColor, Mode=OneWay}"/>
                                                </Ellipse.Fill>
                                                <ToolTipService.ToolTip>
                                                    <ToolTip>
                                                        <TextBlock 
                                                            Text="{Binding Content.UrlStatusTooltip, Mode=OneWay}"
                                                            TextWrapping="Wrap" 
                                                            MaxWidth="400"/>
                                                    </ToolTip>
                                                </ToolTipService.ToolTip>
                                            </Ellipse>
                                        </Grid>

                                        <!-- Rating star indicator (BEFORE text label) -->
                                        <FontIcon 
                                            Glyph="&#xE735;"
                                            FontSize="12"
                                            Foreground="#FFFFC107"
                                            VerticalAlignment="Center"
                                            Visibility="{Binding Content.HasRatings, Mode=OneWay}">
                                            <ToolTipService.ToolTip>
                                                <ToolTip Content="{Binding Content.RatingDisplayText, Mode=OneWay}"/>
                                            </ToolTipService.ToolTip>
                                        </FontIcon>

                                        <!-- Text Label -->
                                        <TextBlock 
                                            Text="{Binding Content.DisplayText}" 
                                            VerticalAlignment="Center"/>
                                        
                                        <!-- Tag indicator badges with colored backgrounds -->
                                        <ContentPresenter
                                            VerticalAlignment="Center"
                                            Visibility="{Binding Content.HasTags, Mode=OneWay}">
                                            <ContentPresenter.Content>
                                                <Binding Path="Content.TagIds" Mode="OneWay">
                                                    <Binding.Converter>
                                                        <local:TagIdsToIconsPanelConverter/>
                                                    </Binding.Converter>
                                                </Binding>
                                            </ContentPresenter.Content>
                                        </ContentPresenter>
                                    </StackPanel>
                                </DataTemplate>
                            </local:TreeNodeTemplateSelector.LinkTemplate>
                        </local:TreeNodeTemplateSelector>
                    </TreeView.ItemTemplateSelector>
                    
                    <!-- Context Menu for Category Nodes -->
                    <TreeView.Resources>
                        <!-- High-contrast selection colors for TreeView items -->
                        <SolidColorBrush x:Key="TreeViewItemBackgroundSelected" Color="#FF0078D4"/>
                        <SolidColorBrush x:Key="TreeViewItemBackgroundSelectedPointerOver" Color="#FF1E90FF"/>
                        <SolidColorBrush x:Key="TreeViewItemBackgroundSelectedPressed" Color="#FF005A9E"/>
                        <SolidColorBrush x:Key="TreeViewItemForegroundSelected" Color="White"/>
                        <SolidColorBrush x:Key="TreeViewItemForegroundSelectedPointerOver" Color="White"/>
                        <SolidColorBrush x:Key="TreeViewItemForegroundSelectedPressed" Color="White"/>
                        
                        <MenuFlyout x:Key="CategoryContextMenu">
                            <MenuFlyoutItem Text="Add Link" Icon="Add" Click="CategoryMenu_AddLink_Click"/>
                            <MenuFlyoutItem Text="Add Sub Category" Click="CategoryMenu_AddSubCategory_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8F4;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Edit Category" Icon="Edit" Click="CategoryMenu_Edit_Click"/>
                            <MenuFlyoutItem x:Name="CategoryMenu_ChangePassword" Text="Change Password" Click="CategoryMenu_ChangePassword_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE72E;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="CategoryMenu_BackupDirectories" Text="Backup Directories..." Click="CategoryMenu_BackupDirectories_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8F1;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutSubItem x:Name="CategoryMenu_AddTag" Text="Add Tag">
                                <MenuFlyoutSubItem.Icon>
                                    <FontIcon Glyph="&#xE8EC;"/>
                                </MenuFlyoutSubItem.Icon>
                            </MenuFlyoutSubItem>
                            <MenuFlyoutItem x:Name="CategoryMenu_RemoveTag" Text="Remove Tag" Click="CategoryMenu_RemoveTag_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE738;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutSubItem x:Name="CategoryMenu_Ratings" Text="Ratings">
                                <MenuFlyoutSubItem.Icon>
                                    <FontIcon Glyph="&#xE735;"/>
                                </MenuFlyoutSubItem.Icon>
                            </MenuFlyoutSubItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Name="CategoryMenu_ZipCategory" Text="Zip Category" Click="CategoryMenu_ZipCategory_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE7B8;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Remove Category" Icon="Delete" Click="CategoryMenu_Remove_Click"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Stats" Click="CategoryMenu_Stats_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE9D9;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Sort By..." Click="CategoryMenu_SortBy_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8CB;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                        
                        <!-- Context Menu for Link Nodes -->
                        <MenuFlyout x:Key="LinkContextMenu">
                            <MenuFlyoutItem x:Name="LinkMenu_AddSubLink" Text="Add Sub-Link" Click="LinkMenu_AddSubLink_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE710;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Name="LinkMenu_Move" Text="Move Link" Click="LinkMenu_Move_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8DE;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="LinkMenu_Edit" Text="Edit Link" Icon="Edit" Click="LinkMenu_Edit_Click"/>
                            <MenuFlyoutItem x:Name="LinkMenu_Copy" Text="Copy Link" Icon="Copy" Click="LinkMenu_Copy_Click"/>
                            <MenuFlyoutItem x:Name="LinkMenu_ChangePassword" Text="Change Password" Click="LinkMenu_ChangePassword_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE72E;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem x:Name="LinkMenu_BackupZip" Text="Backup Zip..." Click="LinkMenu_BackupZip_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8F1;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutSubItem x:Name="LinkMenu_AddTag" Text="Add Tag">
                                <MenuFlyoutSubItem.Icon>
                                    <FontIcon Glyph="&#xE8EC;"/>
                                </MenuFlyoutSubItem.Icon>
                            </MenuFlyoutSubItem>
                            <MenuFlyoutItem x:Name="LinkMenu_RemoveTag" Text="Remove Tag" Click="LinkMenu_RemoveTag_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE738;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutSubItem x:Name="LinkMenu_Ratings" Text="Ratings">
                                <MenuFlyoutSubItem.Icon>
                                    <FontIcon Glyph="&#xE735;"/>
                                </MenuFlyoutSubItem.Icon>
                            </MenuFlyoutSubItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Name="LinkMenu_Summarize" Text="Summarize URL" Click="LinkMenu_Summarize_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8F4;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Name="LinkMenu_ExploreHere" Text="Explore Here" Click="LinkMenu_ExploreHere_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8DA;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Name="LinkMenu_ZipFolder" Text="Zip Folder" Click="LinkMenu_ZipFolder_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE7B8;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Name="LinkMenu_Remove" Text="Remove Link" Icon="Delete" Click="LinkMenu_Remove_Click"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Name="LinkMenu_SortCatalog" Text="Sort Catalog..." Click="LinkMenu_SortCatalog_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8CB;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                        </MenuFlyout>
                    </TreeView.Resources>
                </TreeView>
            </Grid>

            <!-- Draggable Splitter -->
            <controls:SplitterBorder 
                x:Name="SplitterBorder"
                Grid.Column="1" 
                Width="6" 
                Background="Transparent"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                PointerPressed="Splitter_PointerPressed"
                PointerMoved="Splitter_PointerMoved"
                PointerReleased="Splitter_PointerReleased"
                PointerCaptureLost="Splitter_PointerReleased"
                PointerEntered="Splitter_PointerEntered"
                PointerExited="Splitter_PointerExited">
                <Rectangle 
                    Width="1" 
                    Fill="{ThemeResource DividerStrokeColorDefaultBrush}"
                    HorizontalAlignment="Left"/>
            </controls:SplitterBorder>



            <!-- Content Viewer Area -->
            <Grid Grid.Column="2" x:Name="ContentGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header Panel for File/Category Info -->
                <ScrollViewer 
                    Grid.Row="0"
                    x:Name="HeaderViewerScroll"
                    Visibility="Collapsed"
                    Padding="20,16,20,8"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <StackPanel x:Name="HeaderPanel" Spacing="4"/>
                </ScrollViewer>

                <!-- URL Bar for Web Viewing (below Header, above WebView2) -->
                <Grid 
                    Grid.Row="1"
                    x:Name="UrlBarPanel"
                    Visibility="Collapsed"
                    Padding="12,8"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                    BorderThickness="0,0,0,1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox 
                        Grid.Column="0"
                        x:Name="UrlTextBox"
                        PlaceholderText="Enter URL..."
                        Margin="0,0,8,0"
                        VerticalAlignment="Center"
                        KeyDown="UrlTextBox_KeyDown"/>
                    
                    <Button 
                        Grid.Column="1"
                        x:Name="RefreshUrlButton"
                        Click="RefreshUrlButton_Click"
                        VerticalAlignment="Center"
                        Padding="12,6">
                        <Grid>
                            <!-- Normal state: Go icon and text -->
                            <StackPanel 
                                x:Name="GoIconPanel"
                                Orientation="Horizontal" 
                                Spacing="8">
                                <FontIcon 
                                    x:Name="GoIcon"
                                    Glyph="&#xE72C;" 
                                    FontSize="16"/>
                                <TextBlock 
                                    x:Name="GoText"
                                    Text="Go" 
                                    VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Loading state: Spinner (initially collapsed) -->
                            <StackPanel 
                                x:Name="LoadingPanel"
                                Orientation="Horizontal" 
                                Spacing="8"
                                Visibility="Collapsed">
                                <ProgressRing 
                                    Width="16" 
                                    Height="16" 
                                    IsActive="True"/>
                                <TextBlock Text="Loading..." VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Load URL (Enter)"/>
                        </ToolTipService.ToolTip>
                    </Button>
                </Grid>

                <!-- Image Viewer -->
                <Image 
                    Grid.Row="2"
                    x:Name="ImageViewer"
                    Visibility="Collapsed"
                    Stretch="Uniform"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>

                <!-- WebView2 for HTML and PDF -->
                <WebView2 
                    Grid.Row="2"
                    x:Name="WebViewer"
                    Visibility="Collapsed"/>

                <!-- Text Viewer with Search Panel -->
                <Grid Grid.Row="2" x:Name="TextViewerGrid" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search Panel -->
                    <Border 
                        Grid.Row="0"
                        x:Name="TextSearchPanel"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="12,8"
                        Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                <!-- Search TextBox -->
                                <TextBox 
                                    x:Name="SearchTextBox"
                                    PlaceholderText="Find in document..."
                                    MinWidth="250"
                                    VerticalAlignment="Center"
                                    KeyDown="SearchTextBox_KeyDown"/>

                                <!-- Match Counter -->
                                <TextBlock 
                                    x:Name="SearchMatchCounter"
                                    Text="0 of 0"
                                    VerticalAlignment="Center"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    FontSize="12"
                                    Margin="4,0,0,0"/>

                                <!-- Previous Button -->
                                <Button 
                                    x:Name="SearchPreviousButton"
                                    Click="SearchPrevious_Click"
                                    ToolTipService.ToolTip="Previous match (Shift+Enter)"
                                    Padding="8,4">
                                    <FontIcon Glyph="&#xE70E;" FontSize="12"/>
                                </Button>

                                <!-- Next Button -->
                                <Button 
                                    x:Name="SearchNextButton"
                                    Click="SearchNext_Click"
                                    ToolTipService.ToolTip="Next match (Enter)"
                                    Padding="8,4">
                                    <FontIcon Glyph="&#xE70D;" FontSize="12"/>
                                </Button>


                                <!-- Case Sensitive Toggle -->
                                <ToggleButton 
                                    x:Name="SearchCaseSensitiveToggle"
                                    Content="Aa"
                                    ToolTipService.ToolTip="Match case"
                                    Padding="8,4"
                                    FontWeight="SemiBold"
                                    Click="SearchCaseSensitive_Click"/>
                            </StackPanel>

                            <!-- Close Button -->
                            <Button 
                                Grid.Column="1"
                                Click="CloseSearch_Click"
                                ToolTipService.ToolTip="Close (Esc)"
                                Padding="8,4">
                                <FontIcon Glyph="&#xE711;" FontSize="12"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Text Viewer with Line Numbers -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Line Numbers Column -->
                        <Border 
                            Grid.Column="0"
                            x:Name="LineNumbersBorder"
                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                            BorderThickness="0,0,1,0"
                            Padding="8,12,8,12"
                            Visibility="Collapsed">
                            <ScrollViewer 
                                x:Name="LineNumbersScroll"
                                VerticalScrollBarVisibility="Hidden"
                                HorizontalScrollBarVisibility="Disabled"
                                >
                                <TextBlock 
                                    x:Name="LineNumbersText"
                                    FontFamily="Consolas"
                                    FontSize="14"
                                    Foreground="#FF4682B4"
                                    TextAlignment="Right"
                                    IsTextSelectionEnabled="False"/>
                            </ScrollViewer>
                        </Border>

                        <!-- Content ScrollViewer -->
                        <ScrollViewer
                            Grid.Column="1"
                            x:Name="TextViewerScroll"
                            >
                            <TextBox 
                                x:Name="TextViewer"
                                IsReadOnly="True"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                BorderThickness="0"
                                Background="Transparent"
                                FontFamily="Consolas"
                                Padding="12"/>
                        </ScrollViewer>
                    </Grid>
                </Grid>

                <!-- Node Details Viewer -->
                <ScrollViewer
                    Grid.Row="2"
                    x:Name="DetailsViewerScroll"
                    Visibility="Collapsed"
                    Padding="20">
                    <StackPanel x:Name="DetailsPanel" Spacing="12"/>
                </ScrollViewer>

                <!-- Tabbed Details View (Summary + Content) -->
                <TabView
                    Grid.Row="2"
                    x:Name="DetailsTabView"
                    Visibility="Collapsed"
                    IsAddTabButtonVisible="False"
                    TabWidthMode="Equal"
                    CloseButtonOverlayMode="Auto"
                    CanDragTabs="False"
                    CanReorderTabs="False"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <TabView.Resources>
                        <!-- Make tabs more prominent with larger font and padding -->
                        <x:Double x:Key="TabViewItemHeaderFontSize">14</x:Double>
                        <Thickness x:Key="TabViewItemHeaderPadding">16,10,16,10</Thickness>
                        <SolidColorBrush x:Key="TabViewItemHeaderBackgroundSelected" Color="#FF0078D4"/>
                        <SolidColorBrush x:Key="TabViewItemHeaderForegroundSelected" Color="White"/>
                    </TabView.Resources>
                    <TabView.TabItems>
                        <!-- Summary Tab -->
                        <TabViewItem Header="Summary" IsClosable="False">
                            <TabViewItem.IconSource>
                                <FontIconSource Glyph="&#xE7C3;"/>
                            </TabViewItem.IconSource>
                            <ScrollViewer Padding="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <StackPanel x:Name="SummaryPanel" Spacing="12"/>
                            </ScrollViewer>
                        </TabViewItem>
                        
                        <!-- Content Tab -->
                        <TabViewItem Header="Content" IsClosable="False">
                            <TabViewItem.IconSource>
                                <FontIconSource Glyph="&#xE8A5;"/>
                            </TabViewItem.IconSource>
                            <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                <Grid x:Name="ContentTabGrid">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- All content elements fill the entire grid cell -->
                                    <!-- Only ONE should be visible at a time -->
                                    
                                    <!-- ScrollViewer for custom content panels -->
                                    <ScrollViewer Grid.Row="0" x:Name="ContentTabScroll" Padding="20" Visibility="Collapsed">
                                        <StackPanel x:Name="ContentPanel" Spacing="12"/>
                                    </ScrollViewer>
                                    
                                    <!-- Image viewer for content tab -->
                                    <Image 
                                        Grid.Row="0"
                                        x:Name="ContentTabImage"
                                        Visibility="Collapsed"
                                        Stretch="Uniform"/>
                                    
                                    <!-- Text viewer for content tab with line numbers and search -->
                                    <Grid
                                        Grid.Row="0"
                                        x:Name="ContentTabTextGrid"
                                        Visibility="Collapsed"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!-- Search Panel for Content Tab -->
                                        <Border 
                                            Grid.Row="0"
                                            x:Name="ContentTabSearchPanel"
                                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                            BorderThickness="0,0,0,1"
                                            Padding="12,8"
                                            Visibility="Collapsed">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                                                    <TextBox 
                                                        x:Name="ContentSearchTextBox"
                                                        PlaceholderText="Find in document..."
                                                        MinWidth="250"
                                                        VerticalAlignment="Center"
                                                        KeyDown="SearchTextBox_KeyDown"/>
                                                    <TextBlock 
                                                        x:Name="ContentSearchMatchCounter"
                                                        Text="0 of 0"
                                                        VerticalAlignment="Center"
                                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                        FontSize="12"
                                                        Margin="4,0,0,0"/>
                                                    <Button 
                                                        x:Name="ContentSearchPreviousButton"
                                                        Click="SearchPrevious_Click"
                                                        ToolTipService.ToolTip="Previous match (Shift+Enter)"
                                                        Padding="8,4">
                                                        <FontIcon Glyph="&#xE70E;" FontSize="12"/>
                                                    </Button>
                                                    <Button 
                                                        x:Name="ContentSearchNextButton"
                                                        Click="SearchNext_Click"
                                                        ToolTipService.ToolTip="Next match (Enter)"
                                                        Padding="8,4">
                                                        <FontIcon Glyph="&#xE70D;" FontSize="12"/>
                                                    </Button>
                                                    <ToggleButton 
                                                        x:Name="ContentSearchCaseSensitiveToggle"
                                                        Content="Aa"
                                                        ToolTipService.ToolTip="Match case"
                                                        Padding="8,4"
                                                        FontWeight="SemiBold"
                                                        Click="SearchCaseSensitive_Click"/>
                                                </StackPanel>

                                                <Button 
                                                    Grid.Column="1"
                                                    Click="CloseSearch_Click"
                                                    ToolTipService.ToolTip="Close (Esc)"
                                                    Padding="8,4">
                                                    <FontIcon Glyph="&#xE711;" FontSize="12"/>
                                                </Button>
                                            </Grid>
                                        </Border>

                                        <!-- Text content with line numbers -->
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Line Numbers -->
                                            <Border 
                                                Grid.Column="0"
                                                x:Name="ContentTabLineNumbersBorder"
                                                Background="{ThemeResource LayerFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                                BorderThickness="0,0,1,0"
                                                Padding="8,12,8,12"
                                                Visibility="Collapsed">
                                                <ScrollViewer 
                                                    x:Name="ContentTabLineNumbersScroll"
                                                    VerticalScrollBarVisibility="Hidden"
                                                    HorizontalScrollBarVisibility="Disabled"
                                                    ViewChanged="ContentTabLineNumbersScroll_ViewChanged">
                                                    <TextBlock 
                                                        x:Name="ContentTabLineNumbersText"
                                                        FontFamily="Consolas"
                                                        FontSize="14"
                                                        Foreground="#FF4682B4"
                                                        TextAlignment="Right"
                                                        IsTextSelectionEnabled="False"/>
                                                </ScrollViewer>
                                            </Border>

                                            <!-- Text Content -->
                                            <TextBox
                                                Grid.Column="1"
                                                x:Name="ContentTabText"
                                                IsReadOnly="True"
                                                AcceptsReturn="True"
                                                TextWrapping="Wrap"
                                                BorderThickness="0"
                                                Background="{ThemeResource TextControlBackground}"
                                                Foreground="{ThemeResource TextControlForeground}"
                                                FontFamily="Consolas"
                                                FontSize="14"
                                                Padding="12"
                                                SelectionHighlightColor="{ThemeResource SystemAccentColor}"
                                                SelectionFlyout="{x:Null}"
                                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                                        </Grid>
                                    </Grid>
                                    
                                    <!-- WebView for content tab (HTML, PDF, URLs) - MUST fill available space -->
                                    <WebView2 
                                        Grid.Row="0"
                                        x:Name="ContentTabWeb"
                                        Visibility="Collapsed"/>
                                    
                                    <!-- No content message -->
                                    <StackPanel 
                                        Grid.Row="0"
                                        x:Name="ContentTabNoContent"
                                        Visibility="Collapsed"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Spacing="8">
                                        <FontIcon Glyph="&#xE8A5;" FontSize="48" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        <TextBlock 
                                            x:Name="ContentTabNoContentText"
                                            Text="No content to display"
                                            FontSize="14"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            HorizontalAlignment="Center"
                                            TextWrapping="Wrap"
                                            TextAlignment="Center"
                                            MaxWidth="300"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </TabViewItem>
                    </TabView.TabItems>
                </TabView>

                <!-- Welcome Panel -->
                <StackPanel 
                    Grid.Row="2"
                    x:Name="WelcomePanel"
                    Visibility="Visible"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="16">
                    <TextBlock 
                        Text="Welcome to My Memories"
                        FontSize="24"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"/>
                    <TextBlock 
                        Text="Click 'Open File' to view images, HTML, PDF, or text files"
                        FontSize="14"
                        HorizontalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- URL State Check Progress Bar -->
        <Grid 
            Grid.Row="2" 
            x:Name="UrlCheckProgressBar"
            Visibility="Collapsed"
            Padding="12,8"
            Background="{ThemeResource SystemFillColorAttentionBackgroundBrush}"
            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Progress Icon -->
            <ProgressRing 
                Grid.Column="0"
                Width="20" 
                Height="20" 
                IsActive="True"
                Margin="0,0,12,0"/>

            <!-- Progress Message -->
            <TextBlock 
                Grid.Column="1"
                x:Name="UrlCheckProgressText"
                Text="Checking URL status..."
                VerticalAlignment="Center"
                TextWrapping="NoWrap"/>

            <!-- Progress Count -->
            <TextBlock 
                Grid.Column="2"
                x:Name="UrlCheckProgressCount"
                Text="0 / 0"
                VerticalAlignment="Center"
                Margin="12,0,12,0"
                FontWeight="SemiBold"/>

            <!-- Cancel Button -->
            <Button 
                Grid.Column="3"
                x:Name="UrlCheckCancelButton"
                Click="UrlCheckCancelButton_Click"
                Background="Transparent"
                BorderThickness="0"
                Width="32"
                Height="32"
                Padding="0">
                <FontIcon Glyph="&#xE711;" FontSize="12"/>
                <ToolTipService.ToolTip>
                    <ToolTip Content="Cancel URL check"/>
                </ToolTipService.ToolTip>
            </Button>
        </Grid>

        <!-- Auto-Refresh Catalog Progress Bar -->
        <Grid 
            Grid.Row="2" 
            x:Name="AutoRefreshProgressBar"
            Visibility="Collapsed"
            Padding="12,8"
            Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}"
            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Progress Icon -->
            <ProgressRing 
                Grid.Column="0"
                Width="20" 
                Height="20" 
                IsActive="True"
                Margin="0,0,12,0"/>

            <!-- Folder Icon -->
            <FontIcon 
                Grid.Column="1"
                Glyph="&#xE8B7;" 
                FontSize="16"
                Margin="0,0,8,0"
                VerticalAlignment="Center"/>

            <!-- Progress Message -->
            <TextBlock 
                Grid.Column="2"
                x:Name="AutoRefreshProgressText"
                Text="Auto-refreshing catalogs..."
                VerticalAlignment="Center"
                TextTrimming="CharacterEllipsis"/>

            <!-- Progress Count -->
            <TextBlock 
                Grid.Column="3"
                x:Name="AutoRefreshProgressCount"
                Text="0 / 0"
                VerticalAlignment="Center"
                Margin="12,0,0,0"
                FontWeight="SemiBold"/>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="3" Padding="8,4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <TextBlock 
                x:Name="StatusText"
                Text="Ready"
                FontSize="12"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </Grid>
    </Grid>
</Window>
