<Window
    x:Class="MyMemories.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="My Memories - File Viewer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with File Selection -->
        <Grid Grid.Row="0" Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock 
                Grid.Column="0"
                x:Name="CurrentFileText"
                Text="No file selected"
                VerticalAlignment="Center"
                FontSize="14"
                TextTrimming="CharacterEllipsis"/>
            
            <Button 
                Grid.Column="1"
                Content="Open File"
                Click="OpenFileButton_Click"
                Margin="8,0,0,0"/>
        </Grid>

        <!-- Main Content Area with TreeView and Viewer -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: TreeView with Add Button -->
            <Grid Grid.Column="0" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,1,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Add Link Button -->
                <Button 
                    Grid.Row="0"
                    Content="+ Add Link"
                    Click="AddBookmarkButton_Click"
                    Margin="8"
                    HorizontalAlignment="Stretch"/>

                <!-- TreeView -->
                <TreeView 
                    Grid.Row="1"
                    x:Name="LinksTreeView"
                    Margin="8,0,8,8"
                    SelectionChanged="LinksTreeView_SelectionChanged">
                </TreeView>
            </Grid>

            <!-- Content Viewer Area -->
            <Grid Grid.Column="1" x:Name="ContentGrid">
                <!-- Image Viewer -->
                <Image 
                    x:Name="ImageViewer"
                    Visibility="Collapsed"
                    Stretch="Uniform"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>

                <!-- WebView2 for HTML and PDF -->
                <WebView2 
                    x:Name="WebViewer"
                    Visibility="Collapsed"/>

                <!-- Text Viewer -->
                <ScrollViewer
                    x:Name="TextViewerScroll"
                    Visibility="Collapsed">
                    <TextBox 
                        x:Name="TextViewer"
                        IsReadOnly="True"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Consolas"
                        Padding="12"/>
                </ScrollViewer>

                <!-- Welcome Panel -->
                <StackPanel 
                    x:Name="WelcomePanel"
                    Visibility="Visible"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="16">
                    <TextBlock 
                        Text="Welcome to My Memories"
                        FontSize="24"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"/>
                    <TextBlock 
                        Text="Click 'Open File' to view images, HTML, PDF, or text files"
                        FontSize="14"
                        HorizontalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="2" Padding="8,4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <TextBlock 
                x:Name="StatusText"
                Text="Ready"
                FontSize="12"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </Grid>
    </Grid>
</Window>
