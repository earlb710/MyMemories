<Window
    x:Class="MyMemories.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="My Memories - File Viewer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with File Selection -->
        <Grid Grid.Row="0" Padding="16" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock 
                Grid.Column="0"
                x:Name="CurrentFileText"
                Text="No file selected"
                VerticalAlignment="Center"
                FontSize="14"
                TextTrimming="CharacterEllipsis"/>
            
            <Button 
                Grid.Column="1"
                Content="Open File"
                Click="OpenFileButton_Click"
                Margin="8,0,0,0"/>
        </Grid>

        <!-- Main Content Area with TreeView and Viewer -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: TreeView with Search and Add Buttons -->
            <Grid Grid.Column="0" BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,1,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Box Panel -->
                <Grid Grid.Row="0" Margin="8,8,8,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ComboBox 
                        Grid.Column="0"
                        x:Name="SearchComboBox"
                        IsEditable="True"
                        PlaceholderText="Search categories and links..."
                        HorizontalAlignment="Stretch"
                        TextSubmitted="SearchComboBox_TextSubmitted"
                        KeyDown="SearchComboBox_KeyDown"
                        Margin="0,0,4,0"/>
                    
                    <Button 
                        Grid.Column="1"
                        x:Name="SearchButton"
                        Click="SearchButton_Click"
                        Width="32"
                        Height="32"
                        Padding="0"
                        ToolTipService.ToolTip="Search">
                        <FontIcon Glyph="&#xE721;" FontSize="16"/>
                    </Button>
                </Grid>

                <!-- Icon Button Panel -->
                <Grid Grid.Row="1" Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button 
                        Grid.Column="0"
                        Click="CreateCategoryButton_Click"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,4,0"
                        ToolTipService.ToolTip="Create Category">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8F4;" FontSize="16"/>
                            <TextBlock Text="Category" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <Button 
                        Grid.Column="1"
                        Click="AddBookmarkButton_Click"
                        HorizontalAlignment="Stretch"
                        Margin="4,0,0,0"
                        ToolTipService.ToolTip="Add Link">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE71B;" FontSize="16"/>
                            <TextBlock Text="Link" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- TreeView -->
                <TreeView 
                    Grid.Row="2"
                    x:Name="LinksTreeView"
                    Margin="8,0,8,8"
                    SelectionChanged="LinksTreeView_SelectionChanged"
                    RightTapped="LinksTreeView_RightTapped"
                    DoubleTapped="LinksTreeView_DoubleTapped">
                    
                    <!-- Context Menu for Category Nodes -->
                    <TreeView.Resources>
                        <MenuFlyout x:Key="CategoryContextMenu">
                            <MenuFlyoutItem Text="Add Link" Icon="Add" Click="CategoryMenu_AddLink_Click"/>
                            <MenuFlyoutItem Text="Add Sub Category" Click="CategoryMenu_AddSubCategory_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8F4;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Edit Category" Icon="Edit" Click="CategoryMenu_Edit_Click"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Remove Category" Icon="Delete" Click="CategoryMenu_Remove_Click"/>
                        </MenuFlyout>
                        
                        <!-- Context Menu for Link Nodes -->
                        <MenuFlyout x:Key="LinkContextMenu">
                            <MenuFlyoutItem Text="Add Sub Category" Click="LinkMenu_AddSubCategory_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8F4;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Move Link" Click="LinkMenu_Move_Click">
                                <MenuFlyoutItem.Icon>
                                    <FontIcon Glyph="&#xE8DE;"/>
                                </MenuFlyoutItem.Icon>
                            </MenuFlyoutItem>
                            <MenuFlyoutItem Text="Edit Link" Icon="Edit" Click="LinkMenu_Edit_Click"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Remove Link" Icon="Delete" Click="LinkMenu_Remove_Click"/>
                        </MenuFlyout>
                    </TreeView.Resources>
                </TreeView>
            </Grid>

            <!-- Content Viewer Area -->
            <Grid Grid.Column="1" x:Name="ContentGrid">
                <!-- Image Viewer -->
                <Image 
                    x:Name="ImageViewer"
                    Visibility="Collapsed"
                    Stretch="Uniform"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"/>

                <!-- WebView2 for HTML and PDF -->
                <WebView2 
                    x:Name="WebViewer"
                    Visibility="Collapsed"/>

                <!-- Text Viewer -->
                <ScrollViewer
                    x:Name="TextViewerScroll"
                    Visibility="Collapsed">
                    <TextBox 
                        x:Name="TextViewer"
                        IsReadOnly="True"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        BorderThickness="0"
                        Background="Transparent"
                        FontFamily="Consolas"
                        Padding="12"/>
                </ScrollViewer>

                <!-- Node Details Viewer -->
                <ScrollViewer
                    x:Name="DetailsViewerScroll"
                    Visibility="Collapsed"
                    Padding="20">
                    <StackPanel x:Name="DetailsPanel" Spacing="12"/>
                </ScrollViewer>

                <!-- Welcome Panel -->
                <StackPanel 
                    x:Name="WelcomePanel"
                    Visibility="Visible"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="16">
                    <TextBlock 
                        Text="Welcome to My Memories"
                        FontSize="24"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Center"/>
                    <TextBlock 
                        Text="Click 'Open File' to view images, HTML, PDF, or text files"
                        FontSize="14"
                        HorizontalAlignment="Center"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="2" Padding="8,4" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
            <TextBlock 
                x:Name="StatusText"
                Text="Ready"
                FontSize="12"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </Grid>
    </Grid>
</Window>
